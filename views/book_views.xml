<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="rs_library.book_list">
      <field name="name">Books</field>
      <field name="model">book</field>
      <field name="arch" type="xml">
        <tree>
          <field name="title"/>
          <field name="isbn"/>
          <field name="author"/>
        </tree>
      </field>
    </record>


    <record model="ir.ui.view" id="rs_library.loan_list">
      <field name="name">Loans</field>
      <field name="model">book.loan</field>
      <field name="arch" type="xml">
        <form>
           <header>
              <field name="student_id"/>
           </header>
        <field name="loan_line"/>
        <field name="state"/>
        <group name="group_rigth">
          <field name="date_record"/>
          <field name="renews"/>
          <field name="date_start"/>
          <field name="date_end"/>
          <field name="days"/>

        </group>

       </form>
      </field>
      </record>
