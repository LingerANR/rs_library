<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="rs_library.book_form">
      <field name="name">Books</field>
      <field name="model">book</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group name="image_book">
              <field name="photo" widget='image' class="oe_avatar"/>
            </group>
            <group name="group_1">
              <field name="title"/>
              <field name="isbn"/>
              <field name="author"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="rs_library.book_list">
      <field name="name">Books</field>
      <field name="model">book</field>
      <field name="arch" type="xml">
        <tree>
          <field name="photo" widget="image" height="100" width="100" />
          <field name="title"/>
          <field name="isbn"/>
          <field name="author"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="book_kanban_view">
        <field name="name">book.kanban</field>
        <field name="model">book</field>
        <field name="arch" type="xml">
          <kanban>
            <field name="id"/>
            <field name="title"/>
            <field name="quantity"/>
            <field name="isbn"/>
            <field name="author"/>
            <field name="photo_small"/>
            <templates>
              <t t-name="kanban-box">
                <div t-attf-class="oe_kanban_global_click">
                    <div class="o_kanban_image">
                        <img alt="Avatar" t-att-src="kanban_image('book', 'photo_small',record.id.raw_value)" class="oe_resource_picture" style="max-height: 90px; max-width: 60px;" />
                    </div>
                    <div class="oe_kanban_details">
                        <strong class="o_kanban_record_title">
                        <field name="title"/>
                        </strong>
                        <div t-if="record.isbn.value">
                            <t t-esc="record.isbn.value"/>
                        </div>
                        <div t-if="record.author.value">
                            <t t-esc="record.author.value"/>
                      </div>
                      <div>
                          <field name="quantity"/>
                      </div>


                    </div>
                </div>
            </t>
          </templates>
          </kanban>
          </field>
        </record>




    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="rs_library.book_action_window">
      <field name="name">books</field>
      <field name="res_model">book</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>


  </data>
</odoo>
