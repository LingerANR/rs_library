<odoo>
  <data>
    <!-- explicit list view definition -->



    <record model="ir.ui.view" id="rs_library.loan_form">
      <field name="name">Loans</field>
      <field name="model">book.loan</field>
      <field name="arch" type="xml">
            <form  string="Book Loan"  >
              <header>
                <button name="action_approve" type="object" string="Approve Loan" states="draft" />
                 <field name="state" widget="statusbar"/>
              </header>
              <sheet>
                    <div class="oe_title">
                      <h1>
                          <field name="loan_count" readonly="1"/>
                      </h1>
                  </div>
                <group name="group_top">
                  <field name="student_id" attrs="{'readonly':[('state','!=','draft')]}"/>
                </group>
                <group name="group_rigth" cols="4" >
                    <field name="date_record" attrs="{'readonly':[('state','!=','draft')]}"/>
                    <field name="date_start" attrs="{'readonly':[('state','!=','draft')]}" />
                    <field name="date_end" attrs="{'readonly':['|',('state','=','cancel'),('state','=','done')]}"/>
                    <field name="renews"/>
                    <field name="days"/>

                </group>
                  <notebook>
                    <page string="Book Loans">
                        <field name="loan_line" attrs="{'readonly':[('state','!=','draft')]}" >
                          <tree editable="bottom">
                            <field name="book_loan_id" invisible="1"/>
                            <field name="book_id"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="state"/>
                          </tree>
                        </field>
                    </page>
                  </notebook>

                </sheet>
                <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="activity_ids" widget="mail_activity"/>
                <field name="message_ids" widget="mail_thread"/>
                </div>
              </form>

      </field>
      </record>

    <record model="ir.ui.view" id="rs_library.loan_list">
      <field name="name">Loans</field>
      <field name="model">book.loan</field>
      <field name="arch" type="xml">
        <tree string="Book Loans" >
          <field name="loan_count"/>
          <field name="date_start"/>
          <field name="date_end"/>
          <field name="student_id"/>
          <field name="renews"/>
          <field name="days"/>
          <field name="state"/>
        </tree>
      </field>
      </record>





      <!-- <record model="ir.ui.view" id="rs_library.book_loan_line_form">
        <field name="name">Loan Line</field>
        <field name="model">book.loan.line</field>
        <field name="arch" type="xml">
          <form string="Loan Lines">
            <group name="Left">
              <field name="book_loan_id"/>
              <field name="book_id"/>
              <field name="state"/>
            </group>
            <group name="Rigth">
              <field name="date_start"/>
              <field name="date_end"/>
            </group>
          </form>
        </field>
      </record> -->


      <record model="ir.ui.view" id="rs_library.book_loan_line_form">
        <field name="name">Loan Line</field>
        <field name="model">book.loan.line</field>
        <field name="arch" type="xml">
          <form string="Book Loan Lines" >
            <header>
               <field name="state" widget="statusbar"/>
            </header>
            <sheet>
              <group>
              <field name="book_loan_id"/>
              <field name="student_id"/>
              <field name="book_id"/>
              <field name="date_start"/>
              <field name="date_end"/>
            </group>
            </sheet>
          </form>
        </field>
        </record>


      <record model="ir.ui.view" id="rs_library.loan_calendar">
        <field name="name">Loans</field>
        <field name="model">book.loan</field>
        <field name="arch" type="xml">
          <calendar date_start="date_start" date_stop="date_end" color="state" form_view_id="rs_library.loan_form" quick_add="False" >
            <field name="loan_count" />
            <field name="student_id" />
            <field name="date_end" />
            <field name="renews" />
          </calendar>
        </field>
      </record>


      <record model="ir.ui.view" id="rs_library.book_loan_line">
        <field name="name">Loan Line</field>
        <field name="model">book.loan.line</field>
        <field name="arch" type="xml">
          <tree string="Book Loan Lines" >
            <field name="book_loan_id"/>
            <field name="student_id"/>
            <field name="book_id"/>
            <field name="state"/>
            <field name="date_start"/>
            <field name="date_end"/>
          </tree>
        </field>
        </record>

        <record id="view_filter_book_loan_view" model="ir.ui.view">
         <field name="name">Book loan search </field>
         <field name="model">book.loan</field>
         <field name="arch" type="xml">
            <search string="Buscar Book Loan">
               <filter string="Student" domain="[('student_value','=',True)]" name="student_value"/>
               <filter string="En deuda" domain="[('state','=','over')]" name="state_over"/>
               <field name="student_id" string="Student" domain="['|',('student_id.ref','ilike',self),('student_id.name','ilike',self)]" />
               <field name="student_id" string="Matricula" domain="[('student_id.ref','ilike',self)]" />
           </search>
        </field>
        </record>


<!--
        <div class="o_kanban_image">
            <img alt="Avatar" t-att-src="kanban_image('book', 'book_id.photo_small',record.id.raw_value)" class="oe_resource_picture" style="max-height: 90px; max-width: 60px;" />
        </div>
-->
        <record model="ir.ui.view" id="book_loan_line_kanban_view">
            <field name="name">book.loan.line.kanban</field>
            <field name="model">book.loan.line</field>
            <field name="arch" type="xml">
              <kanban default_order="date_end"
                quick_create="false"
                group_create="false"
                default_group_by="state"
                group_edit="false" >

                <field name="id"/>
                <field name="book_loan_id"/>
                <field name="book_id"/>
                <field name="student_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <templates>
                  <t t-name="kanban-box">
                    <div t-attf-class="oe_kanban_global_click">
                        <div class="oe_kanban_details">
                            <strong class="o_kanban_record_title">
                            <field name="book_loan_id"/>
                            <field name="student_id"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            </strong>
                        </div>
                    </div>
                </t>
              </templates>
              </kanban>
              </field>
            </record>

            <record model="ir.ui.view" id="loan_lines_pivot">
              <field name="name">Book loan lines PIvot</field>
              <field name="model">book.loan.line</field>
              <field name="arch" type="xml">
                <pivot string="Book loans" >
                  <field name="id"/>
                  <field name="book_loan_id"/>
                  <field name="book_id"  />
                  <field name="student_id"  />
                  <field name="date_start" interval="week" type="col" />
                  <field name="date_end" interval="month" type="col" />
                  <field name="state" type="measure" />

                </pivot>
              </field>
            </record>


    <!-- <field name="arch" type="xml"> -->


    <record model="ir.actions.act_window" id="rs_library.loans_action_window">
      <field name="name">Loans</field>
      <field name="res_model">book.loan</field>
      <field name="view_mode">tree,form,calendar</field>

    </record>

    <record model="ir.actions.act_window" id="rs_library.loan_line_action_window">
      <field name="name">Loan lines</field>
      <field name="res_model">book.loan.line</field>
      <field name="view_mode">tree,form,kanban,pivot</field>

    </record>



  </data>
</odoo>
