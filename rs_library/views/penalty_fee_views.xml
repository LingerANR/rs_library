<odoo>
  <data>

    <!-- actions opening views on models -->

    <record model="ir.ui.view" id="rs_library.penalty_tree">
      <field name="name">Penalties</field>
      <field name="model">penalty.fee</field>
      <field name="arch" type="xml">
        <tree string="Book Penalty" >
          <field name="student_id"/>
          <field name="loan_line_id"/>
          <field name="create_date"/>
          <field name="paid"/>
        </tree>
      </field>
      </record>

      <record model="ir.ui.view" id="penalty_kanban_view">
          <field name="name">penalty.kanban</field>
          <field name="model">penalty.fee</field>
          <field name="arch" type="xml">
            <kanban >
              <field name="id"/>
              <field name="loan_line_id"/>
              <field name="create_date"/>
              <field name="paid"/>
              <field name="student_id"/>
              <templates>
                <t t-name="kanban-box">
                  <div t-attf-class="oe_kanban_global_click">
                      <div class="o_kanban_image">
                          <img alt="Avatar" t-att-src="kanban_image('book', 'photo_small',record.id.raw_value)" class="oe_resource_picture" style="max-height: 90px; max-width: 60px;" />
                      </div>
                      <div class="oe_kanban_details">
                          <strong class="o_kanban_record_title">
                          <field name="student_id"/>
                          </strong>
                          <div t-if="record.create_date.value">
                            Start date:  <t t-esc="record.create_date.value"/>
                          </div>
                          <div t-if="record.loan_line_id.value">
                          Loan:    <t t-esc="record.loan_line_id.value"/>
                          </div>
                          <t t-if="record.paid.raw_value" >
                          Paid out: <input type="checkbox" t-att-checked="record.paid" />
                          </t>
                      </div>
                  </div>
              </t>
            </templates>
            </kanban>
            </field>
          </record>

    <record model="ir.actions.act_window" id="rs_library.penalty_fee_action_window">
      <field name="name">Penalty Book Loan Fees</field>
      <field name="res_model">penalty.fee</field>
      <field name="view_mode">tree,form,kanban</field>
    </record>


  </data>
</odoo>
